{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "inkcaliber-desk",
  "version": "0.1.0",
  "identifier": "com.f3nk1n.inkcaliber-desk",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "inkcaliber-desk",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "assetProtocol": {
          "enable": true,
          "scope": [
            "$PICTURE/**",
            "$DOCUMENT/**",
            "$DOCUMENT/InkCaliber/**",
            "$DOCUMENT/InkCaliber/.trash/**",
            "$HOME/**"
          ]
        }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
