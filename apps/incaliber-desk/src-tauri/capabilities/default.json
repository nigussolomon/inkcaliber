{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    "fs:allow-mkdir",
    "fs:allow-write-text-file",
    "fs:allow-read-text-file",
    "fs:allow-read-dir",
    "fs:allow-remove",
    "fs:allow-stat",
    "fs:deny-rename",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$DOCUMENT/InkCaliber" }, { "path": "$DOCUMENT/InkCaliber/*" }]

    }
  ]
}
